{
    "name": "flagrow/flarum-updater",
    "description": "The Laravel Zero Framework.",
    "keywords": ["flarum", "flagrow", "update", "updater"],
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/flagrow/flarum-updater/issues",
        "source": "https://github.com/flagrow/flarum-updater"
    },
    "authors": [
        {
            "name": "DaniÃ«l Klabbers",
            "email": "daniel@klabbers.email",
            "homepage": "http://luceos.com"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "guzzlehttp/guzzle": "^6.3",
        "illuminate/database": "5.6.*",
        "laravel-zero/framework": "5.6.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "ext-posix": "0"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["flarum-updater"]
}
